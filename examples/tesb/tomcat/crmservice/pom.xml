<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<artifactId>crmservice</artifactId>
	<name>CRMService</name>
	<packaging>pom</packaging>

	<parent>
		<groupId>org.talend.esb.examples.tomcat</groupId>
		<artifactId>tomcat-examples-parent</artifactId>
		<version>8.0.1-SNAPSHOT</version>
		<relativePath>..</relativePath>
	</parent>

	<properties>
		<endpoint.http.prefix>http://${tomcat.host}:${tomcat.http.port}/crmservice-service</endpoint.http.prefix>
		<endpoint.https.prefix>https://${tomcat.host}:${tomcat.https.port}/crmservice-service</endpoint.https.prefix>
		<endpoint.prefix>${endpoint.http.prefix}</endpoint.prefix>
	</properties>

	<modules>
		<module>common</module>
		<module>service</module>
		<module>service-endpoint</module>
		<module>client</module>
	</modules>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.talend.esb.examples.tomcat</groupId>
				<artifactId>crmservice-common</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>org.talend.esb.examples.tomcat</groupId>
				<artifactId>crmservice-service</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>org.talend.esb.examples.tomcat</groupId>
				<artifactId>crmservice-service-endpoint</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>org.talend.esb.examples.tomcat</groupId>
				<artifactId>crmservice-client</artifactId>
				<version>${project.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

</project>
