<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxws="http://cxf.apache.org/jaxws"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:soap="http://cxf.apache.org/bindings/soap"
    xmlns:p="http://cxf.apache.org/policy"
    xmlns:wsp="http://www.w3.org/ns/ws-policy"
    xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
http://cxf.apache.org/bindings/soap http://cxf.apache.org/schemas/configuration/soap.xsd
http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">

    <import resource="classpath:/META-INF/cxf/cxf.xml" />

    <bean class="org.apache.cxf.transport.local.LocalTransportFactory" lazy-init="false">
        <property name="transportIds">
            <list>
                <value>http://cxf.apache.org/transports/local</value>
                <value>http://schemas.xmlsoap.org/soap/http</value>
                <value>http://schemas.xmlsoap.org/wsdl/soap/http</value>
            </list>
        </property>
    </bean>

    <bean id="xsltFeatureProvider" class="org.talend.esb.policy.transformation.feature.TransformationFeature">
        <property name="path"      value="conf/feature-test/always-response/providerTransformation.xsl" />
        <property name="appliesTo" value="always"/>
        <property name="message"   value="response"/>
        <property name="type"      value="xslt"/>
    </bean>

    <bean id="xsltFeatureConsumer" class="org.talend.esb.policy.transformation.feature.TransformationFeature">
        <property name="path"      value="conf/feature-test/always-response/consumerTransformation.xsl" />
        <property name="appliesTo" value="always"/>
        <property name="message"   value="response"/>
        <property name="type"      value="xslt"/>
    </bean>


    <bean id="libraryServerImpl" class="org.talend.esb.policy.transformation.test.internal.LibraryServerImpl"/>
    <jaxws:endpoint xmlns:library="http://services.talend.org/test/Library/1.0"
        id="LibraryProviderHTTP" address="local://LibraryHttpPort"
        serviceName="library:LibraryProvider" endpointName="library:LibraryHttpPort"
        implementor="#libraryServerImpl">
        <jaxws:features>
            <ref bean="xsltFeatureProvider"/>
        </jaxws:features>
    </jaxws:endpoint>

    <jaxws:client xmlns:library="http://services.talend.org/test/Library/1.0"
        id="libraryHttp" serviceName="library:LibraryProvider"
        endpointName="library:LibraryHttpPort"
        address="local://LibraryHttpPort"
        serviceClass="org.talend.services.test.library._1_0.Library">
        <jaxws:features>
            <ref bean="xsltFeatureConsumer"/>
        </jaxws:features>
    </jaxws:client>

</beans>
