<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>org.talend.esb</groupId>
    <artifactId>ds-service-mysql-8</artifactId>
    <packaging>bundle</packaging>
    <version>${revision}</version>

    <parent>
        <groupId>org.talend.esb</groupId>
        <artifactId>datasource-service</artifactId>
        <version>8.0.1-SNAPSHOT</version>
    </parent>

    <name>Talend ESB :: SAM :: Datasource :: MySQL8</name>
    
    <properties>
        <revision>${ds-service-mysql-8.version}</revision>
    </properties>
    
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Import-Package>com.mysql.cj.jdbc;version="6.0.0",javax.sql,org.apache.commons.dbcp.datasources,org.osgi.service.blueprint;version="[1.0.0,2.0.0)"</Import-Package>
                    </instructions>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>attach-artifacts</id>
                        <phase>package</phase>
                        <goals>
                            <goal>attach-artifact</goal>
                        </goals>
                        <configuration>
                            <artifacts>
                                <artifact>
                                    <file>etc/org.talend.esb.datasource.mysql.cfg</file>
                                    <type>cfg</type>
                                    <classifier>org.talend.esb.datasource.mysql</classifier>
                                </artifact>
                            </artifacts>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
